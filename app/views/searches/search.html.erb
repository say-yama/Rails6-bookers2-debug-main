<h2>Search for "<%= params[:word]  %>"</h2>

 <table class = "table table-hover table-inverse">
   <% if @range == "User" %>
   <thead>
     <tr>
       <th></th>
       <th>name</th>
     </tr>
   </thead>
     <tbody>
       <% @users.each do |user| %>
       <tr>
         <td>
           <%= link_to (user) do %>
           <%= image_tag user.get_profile_image, size: '50x50' %>
           <% end %>
         </td>
         <td><%= user.name %></td>
       </tr>
       <% end %>
       <% if @users.count == 0 %>
          <tr>
            <td>検索結果はありませんでした</td>
          </tr>
        <% end %>
     </tbody>
   <% else %>
   <thead>
     <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
     </tr>
   </thead>
     <tbody>
       <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to(book.user) do %>
            <%= image_tag book.user.get_profile_image, size:'50x50' %>
            <% end %>
          </td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
       <% end %>
        <% if @books.count == 0 %>
          <tr>
            <td>検索結果はありませんでした</td>
          </tr>
        <% end %>
     </tbody>
   <% end %>
 </table>